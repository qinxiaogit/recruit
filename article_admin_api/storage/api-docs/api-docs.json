{
    "openapi": "3.0.0",
    "info": {
        "title": "文章站点",
        "version": "v1"
    },
    "paths": {
        "/api/auth/front/login": {
            "post": {
                "summary": "系统登录",
                "operationId": "loginSystem",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "code": {
                                        "type": "string"
                                    },
                                    "encryptedData": {
                                        "type": "string"
                                    },
                                    "iv": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "code": "微信code",
                                    "encryptedData": "获取手机号加密数据",
                                    "iv": "加密偏移"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Invalid username supplied"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/auth/front/me": {
            "post": {
                "summary": "获取用户信息",
                "operationId": "meSystem",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Invalid username supplied"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/auth/front/logout": {
            "post": {
                "summary": "退出登录",
                "operationId": "logoutSystem",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Invalid username supplied"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Display a listing of projects."
                    }
                }
            }
        }
    }
}